<Window x:Class="HearBert.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HearBert"
        mc:Ignorable="d"
        Height="auto" Width="600" ResizeMode="NoResize" SizeToContent="Height" WindowStyle="None" WindowStartupLocation="CenterOwner">
    <Grid>
        <Border BorderBrush="Chocolate" BorderThickness="10">
            <Image x:Name="Logo" Source="HearBertLogo.bmp" />
        </Border>
        <TextBlock Text="ABCDEFGHABCDEFGH" x:Name="AssemblyInfo" FontSize="24" FontWeight="Bold" Margin="20,20,20,20" Foreground="WhiteSmoke">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="3" Direction="330" Color="Black" BlurRadius="8"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
